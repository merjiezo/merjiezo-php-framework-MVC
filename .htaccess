<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>
	<Files .htaccess>
		order allow,deny
		deny from all
	</Files>
	RewriteEngine on

	# if a directory or a file exists, use it directly
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	RewriteRule ^$ index.php?r=site/
	RewriteRule ^(\w+)$ index.php?r=$1
	RewriteRule ^(\w+)/(\w+)$  index.php?r=$1/$2

</IfModule>