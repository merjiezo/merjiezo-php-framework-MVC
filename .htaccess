<Files .htaccess>
	order allow,deny
	deny from all
</Files>
rewriteengine on
# if a directory or a file exists, use it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^$ index.php?r=site/index
RewriteRule ^(\w+)$ index.php?r=$1/index1
RewriteRule ^(\w+)/(\w+)$  index.php?r=$1/$2




 